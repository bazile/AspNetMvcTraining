@model IEnumerable<AuthDemo.EF.Skyscraper>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@*@if (Request.Cookies["user"] != null)*@
@if (User.Identity.IsAuthenticated)
{
    @*<div>Вы авторизованы как @Request.Cookies["user"].Value</div>*@
    @*<div>Вы авторизованы как @User.Identity.Name</div>*@
    <div>@Html.ActionLink("Выйти", "Logout")</div>

    <p>
        @Html.ActionLink("Create New", "CreateSkyscraper")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSkyscraper", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteSkyscraper", new { id = item.Id })
                </td>
            </tr>
        }
        </table>
    }
    else
    {
        using (Html.BeginForm())
        {
        <div><input type="text" name="login" maxlength="30" /></div>
        <div><input type="password" name="password" maxlength="100" /></div>
        <div><input type="submit" value="Войти" /></div>
    }
}
