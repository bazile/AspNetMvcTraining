@model WebApplicationQuizz.Models.EditQuestionModel

@{
    ViewBag.Title = "EditQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditQuestion</h2>

@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.QuizzId)

    <div>@Html.EditorFor(model => model.Text)</div>

    for (int i = 0; i < Model.Answers.Length; i++)
    {
        var answer = Model.Answers[i];
        <div style="border:1px solid navy; padding:1em">
            <div>Текст ответа: <input type="text" name="Answers[@i].Text" value="@answer.Text" /></div>
            <div>Правильный ответ: @Html.CheckBox("Answers["+i+"].Correct", answer.Correct)</div>
            <div>Комментарий: <input type="text" name="Answers[@i].Comment" value="@answer.Comment" /></div>
            <input type="hidden" name="Answers[@i].Id" value="@answer.Id" />
            <input type="hidden" name="Answers[@i].QuizzId" value="@answer.QuizzId" />
            <input type="hidden" name="Answers[@i].QuestionId" value="@answer.QuestionId" />

            @*@Html.Partial("answer", answer)*@
        </div>
    }

    <input type="submit" value="Сохранить" />

