@model WebApplicationQuizz.Models.RegisterUserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>

@using (Html.BeginForm("Registration", "AuthReg"))
{
    <div>
        @Html.LabelFor(m => m.User)
        @Html.EditorFor(m => m.User)
        @Html.ValidationMessageFor(m => m.User)
    </div>
    <div>
        @Html.LabelFor(m => m.Pass)
        @Html.EditorFor(m => m.Pass)
        @Html.ValidationMessageFor(m => m.Pass)
    </div>

    <input type="submit" value="Зарегестрировать" />
}

@Html.ValidationSummary()

